@model Survey
<h1>Dojo Survey with Validation</h1>

<form asp-action="survey" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter name" name="Name">
    </div>
    <div class="form-group">
        <span asp-validation-for="Location"></span>
        <label asp-for="Location" class="mr-sm-2" for="inlineFormCustomSelect">Dojo Location</label>
        <select asp-for="Location" class="custom-select mr-sm-2" name="Location">
            <option value="Chicago">Chicago</option>
            <option value="San Jose">San Jose</option>
            <option value="Tulsa">Tulsa</option>
            <option value="Berkeley">Berkeley</option>
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Language"></span>
        <label asp-for="Language" class="mr-sm-2" for="inlineFormCustomSelect">Favorite Language:</label>
        <select asp-for="Language" class="custom-select mr-sm-2" name="Language">
            <option value="C#">C#</option>
            <option value="Java">Java</option>
            <option value="Python">Python</option>
            <option value="JavaScript">JavaScript</option>
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Comments"></span>
        <label asp-for="Comments" for="exampleFormControlTextarea1">Comments</label>
        <textarea asp-for="Comments" class="form-control" name="Comments" id="exampleFormControlTextarea1"
            rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>