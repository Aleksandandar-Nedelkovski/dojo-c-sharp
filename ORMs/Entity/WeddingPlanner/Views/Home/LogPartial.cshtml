@using WeddingPlanner.Models
@model Login

<form asp-action="Login" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="EmailLogin"></label><br>
        <input asp-for="EmailLogin" class="form-control" >
        <span asp-validation-for="EmailLogin" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordLogin"></label><br>
        <input asp-for="PasswordLogin" class="form-control">
        <span asp-validation-for="PasswordLogin" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>