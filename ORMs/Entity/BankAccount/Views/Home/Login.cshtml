@model LoginUser
@{
ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm">
            <h2>@ViewData["Title"]</h2>
            <form asp-action="Login" asp-controller="Home" method="post">
                <div class="form-group">
                    <span asp-validation-for="Email"></span>
                    <label asp-for="Email">Email address</label>
                    <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="Enter email">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password"></span>
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1"
                        placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-sm">
        </div>
    </div>
</div>