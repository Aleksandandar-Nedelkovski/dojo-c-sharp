@using BankAccounts.Models
@model LoginUser

@{
  ViewData["Title"] = "Dojo Bank";
}
<div class="login-form">
  <form asp-action="processlogin" asp-controller="Home" method="POST" class="p-3">
    <h3 class="text-center mb-3">LOG IN</h3>    
    <div class="form-group">
      <input asp-for="Email" class="form-control" placeholder="Email">
      <span asp-validation-for="Email" style="color:red;font-size:small;" class="ml-2"></span>
    </div>
    <div class="form-group">
      <input asp-for="Password" class="form-control" placeholder="Password">
      <span asp-validation-for="Password" style="color:red;font-size:small;" class="ml-2"></span>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-lg btn-outline-success btn-block">LOG IN</button>
    </div>
  </form>
  <p class="text-center"><a href="/register" class="text-white">CLICK HERE TO REGISTER.</a></p>
</div>