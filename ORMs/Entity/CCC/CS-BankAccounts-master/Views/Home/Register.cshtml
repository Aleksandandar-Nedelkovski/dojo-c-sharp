@using BankAccounts.Models
@model User

@{
  ViewData["Title"] = "Dojo Bank";
}

<div class="login-form">
  <form asp-action="processregister" asp-controller="Home" method="POST" class="p-3">
    <h3 class="text-center mb-3">REGISTER</h3>       
    <div class="form-group">
      <input asp-for="FirstName" class="form-control" placeholder="First Name">
      <span asp-validation-for="FirstName" style="color:red;font-size:small;" class="ml-2"></span>
    </div>
    <div class="form-group">
      <input asp-for="LastName" class="form-control" placeholder="Last Name">
      <span asp-validation-for="LastName" style="color:red;font-size:small;" class="ml-2"></span>
    </div>
    <div class="form-group">
      <input asp-for="Email" class="form-control" placeholder="Email">
      <span asp-validation-for="Email" style="color:red;font-size:small;" class="ml-2"></span>
    </div>
    <div class="form-group">
      <input asp-for="Password" class="form-control" placeholder="Password">
      <span asp-validation-for="Password" style="color:red;font-size:small;" class="ml-2"></span>
    </div>
    <div class="form-group">
      <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
      <span asp-validation-for="ConfirmPassword" style="color:red;font-size:small;" class="ml-2"></span>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-lg btn-outline-success btn-block">REGISTER</button>
    </div>
  </form>
  <p class="text-center"><a href="/" class="text-white">CLICK HERE TO LOGIN.</a></p>
</div>