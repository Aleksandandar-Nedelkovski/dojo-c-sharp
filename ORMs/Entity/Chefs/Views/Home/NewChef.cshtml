@model Chef
@{
ViewData["Title"] = "Add a Chef!";
}

<div class="container">
    <div class="row">
        <div class="col-sm"></div>
        <div class="col-sm">
            <h2>@ViewData["Title"]</h2>
            <form asp-action="CreateChef" asp-controller="Home" method="post">
                <div class="form-group">
                    <span asp-validation-for="FirstName"></span>
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="First Name">
                </div>
                <div class="form-group">
                    <span asp-validation-for="LastName"></span>
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="Last Name">
                </div>
                <div class="form-group">
                    <span asp-validation-for="DateOfBirth"></span>
                    <label asp-for="DateOfBirth">Date of Birth</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-sm"></div>
    </div>
</div>